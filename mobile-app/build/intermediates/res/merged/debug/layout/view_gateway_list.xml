<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvListViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textColor="@color/title_gray"
        android:textSize="12sp" />

    <com.amazonaws.mchp.awsprovisionkit.task.ui.SlideListView
        android:id="@+id/slideOnlineListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvListViewTitle"
        android:background="@color/white"
        android:divider="@color/line_gray"
        android:dividerHeight="0.5dp"
        android:listSelector="@drawable/devicelist_item_selector" >
    </com.amazonaws.mchp.awsprovisionkit.task.ui.SlideListView>

</RelativeLayout>